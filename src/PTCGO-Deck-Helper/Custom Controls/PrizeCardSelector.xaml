<UserControl x:Class="PTCGO_Deck_Helper.Custom_Controls.PrizeCardSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PTCGO_Deck_Helper.Custom_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="img_CardTitle" Source="/Resources/default-card-image.png" Stretch="UniformToFill" StretchDirection="Both"/>
        <TextBlock Grid.Column="0"  x:Name="tbx_CardName" Text="Name" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"  Margin="30,0,0,0" Visibility="Hidden"/>
        <Rectangle Grid.Column="1" Grid.RowSpan="1000">
            <Rectangle.Fill>
                <SolidColorBrush Color="MidnightBlue"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock x:Name="tbx_CardCount" Grid.Column="1" Text="X" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="35" Foreground="White"/>
    </Grid>
</UserControl>
