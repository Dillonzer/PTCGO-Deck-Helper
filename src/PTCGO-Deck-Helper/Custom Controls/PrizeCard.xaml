<UserControl x:Class="PTCGO_Deck_Helper.Custom_Controls.PrizeCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PTCGO_Deck_Helper.Custom_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:Width="250">
    <Grid>
        <Image x:Name="img_PrizeCard" Source="/Resources/default-card-image.png" Stretch="Uniform" Opacity=".25" MouseDown="img_PrizeCard_MouseDown" StretchDirection="Both"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Column="0" x:Name="cmb_SelectPrize" Height="30"/>
            <Button Grid.Column="1" Content="Set" x:Name="btn_SetPrize" Height="30" Click="btn_SetPrize_Click"  />
        </Grid>
    </Grid>
</UserControl>
