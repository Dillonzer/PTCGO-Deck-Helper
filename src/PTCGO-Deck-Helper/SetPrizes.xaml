<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PTCGO_Deck_Helper"
        xmlns:Custom_Controls="clr-namespace:PTCGO_Deck_Helper.Custom_Controls" x:Class="PTCGO_Deck_Helper.SetPrizes"
        mc:Ignorable="d"
        Title="Set Prizes" Height="800" Width="1000"
    MinHeight="800" MinWidth="1000">
    <Grid Background="DarkGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Column="0" >
            <StackPanel x:Name="stp_Pokemon"/>
        </ScrollViewer>
        <ScrollViewer Grid.Column="1" >
            <StackPanel x:Name="stp_Trainers"/>
        </ScrollViewer>
        <ScrollViewer Grid.Column="2" >
            <StackPanel x:Name="stp_Energy"/>
        </ScrollViewer>
        <Button x:Name="btn_SubmitPrizes" Grid.Column="2" Grid.Row="1" Margin="5,5,5,5" Content="Submit Prizes" Click="btn_SubmitPrizes_Click"></Button>
    </Grid>
</Window>
